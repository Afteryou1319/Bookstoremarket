<Window x:Class="Bookstoremarket.CountBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstoremarket"
        mc:Ignorable="d"
        Title="ระบุจำนวนการสั่งซื้อ" Height="300" Width="400">
    <Grid Margin="10">
        <Label Content="ระบุจำนวนที่ต้องการสั่งซื้อ:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

        <TextBox Name="QuantityTextBox" Width="100" Height="30" FontSize="14"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>



        <Button Content="ยืนยัน" Width="100" Height="30" FontSize="14"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,10,0"
                Click="ConfirmQuantity_Click"/>

        <Label Content="กรอกเลขรหัสลูกค้า" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,93,0,0"/>
        <TextBox Name="IdCustomerText" Width="100" Height="30" FontSize="14"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,141,0,0"/>
    </Grid>
</Window>
