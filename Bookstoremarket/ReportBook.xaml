<Window x:Class="Bookstoremarket.ReportBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstoremarket"
        mc:Ignorable="d"
        Title="สรุปรายการสั่งซื้อ" Height="400" Width="600">
    <Grid Margin="10">
        <!-- Label -->
        <Label Content="รายการสรุปการสั่งซื้อ" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <!-- ListBox for Order Summary -->
        <ListBox Name="OrderSummaryListBox" FontSize="14" Margin="10,50,10,50"/>

        <!-- Confirm Button -->
        <Button Content="ยืนยันการสั่งซื้อ" Width="200" Height="40" FontSize="16"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"
                Click="ConfirmOrder_Click"/>
    </Grid>
</Window>
