<Window x:Class="Bookstoremarket.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#f0f4f8">
    <Grid>
        <Border Background="White" CornerRadius="15" Width="400" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid Margin="20">
                <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,10,0,40" />

                <StackPanel VerticalAlignment="Center" Margin="20">

                    <TextBlock Text="Username" Margin="5,0,5,5" Foreground="#2c3e50" />
                    <TextBox x:Name="UsernameTextBox" Height="35" Background="#ecf0f1" BorderBrush="#bdc3c7" BorderThickness="1"  Padding="5"/>

                    <TextBlock Text="Password" Margin="5,20,5,5" Foreground="#2c3e50" />
                    <PasswordBox x:Name="PasswordBox" Height="35" Background="#ecf0f1" BorderBrush="#bdc3c7" BorderThickness="1"  Padding="5"/>

                    <Button Content="Login" Height="40" Background="#3498db" Foreground="White" BorderThickness="0"  FontSize="16" Margin="0,30,0,0" Click="LoginButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
