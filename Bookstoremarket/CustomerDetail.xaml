<Window x:Class="Bookstoremarket.CustomerDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstoremarket"
        mc:Ignorable="d"
        Title="CustomerDetail" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" >
            <TextBlock Text="ชื่อ" />
            <TextBox x:Name="name" />
            <TextBlock Text="อีเมล" />
            <TextBox x:Name="address" />
            <TextBlock Text="เบอร์โทร" />
            <TextBox x:Name="email" />
            <Button Content="บันทึก" HorizontalAlignment="Center" Width="100" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
